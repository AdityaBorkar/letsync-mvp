{
	"$schema": "https://biomejs.dev/schemas/2.1.2/schema.json",
	"assist": {
		"actions": {
			"source": {
				"organizeImports": {
					"level": "on",
					"options": {
						"groups": [
							["server-only", "use client", "use server", "client-only"],
							":BLANK_LINE:",
							":URL:",
							":BLANK_LINE:",
							[":NODE:", ":BUN:"],
							":BLANK_LINE:",
							[":PACKAGE:", ":PACKAGE_WITH_PROTOCOL:"],
							":BLANK_LINE:",
							["@/components", "@/lib", "@/hooks", "@/assets"],
							":BLANK_LINE:",
							[
								"../utils/test-helpers",
								"../utils/mock-fs",
								"../utils/test-fixtures"
							]
						]
					}
				},
				"useSortedAttributes": "on",
				"useSortedKeys": "on"
			}
		}
	},
	"css": {
		"formatter": {
			"enabled": true
		}
	},
	"files": {
		"includes": ["**/*", "!node_modules/**/*", "!dist/**/*", "!bun.lock"]
	},
	"html": {
		"formatter": {
			"enabled": true
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	},
	"linter": {
		"domains": {
			"next": "all",
			"project": "all",
			"react": "all"
		},
		"rules": {
			"a11y": "on",
			"complexity": "on",
			"correctness": {
				"recommended": true,
				"useImportExtensions": "off"
			},
			"nursery": {
				"noUnresolvedImports": "off",
				"useJsonImportAttribute": "off",
				"useSortedClasses": {
					"fix": "safe",
					"level": "error",
					"options": {
						"attributes": ["classList"],
						"functions": ["clsx", "cva", "tw", "tw.*"]
					}
				}
			},
			"performance": {
				"noBarrelFile": "off",
				"noReExportAll": "off",
				"recommended": true
			},
			"security": "on",
			"style": {
				"noNonNullAssertion": "off",
				"recommended": true
			},
			"suspicious": {
				"noConsole": "off",
				"noExplicitAny": "off",
				"recommended": true
			}
		}
	},
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	}
}
